# Telegram机器人配置
# 从 @BotFather 获取的机器人令牌
BOT_TOKEN=your_bot_token_here

# 目标群组ID（负数表示群组）
TARGET_GROUP_ID=-1003116625254

# 话题ID（可选，如果不使用话题模式请留空）
TOPIC_ID=3

# 最大文件大小限制（MB）
MAX_FILE_SIZE=2048

# 允许使用的用户ID列表（用逗号分隔，留空表示允许所有用户）
ALLOWED_USERS=

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 网络配置
# 重试次数
RETRY_ATTEMPTS=5

# 重试延迟（秒）
RETRY_DELAY=10

# 连接超时（秒）
CONNECT_TIMEOUT=30

# 读取超时（秒）
READ_TIMEOUT=60
